

<block>
<form bindsubmit="formSubmit" bindreset="formReset">
  <van-cell-group title="基本资料">
    <van-field id="orgName" name="orgName" value="{{ orgName }}" clearable label="组织名称"  placeholder="请输入组织名称" bind:click-icon="onClickIcon" />
    <van-field name="orgType" value="{{ orgType }}" clearable label="组织类型" placeholder="选择组织类型" bindtap="orgClick" is-link readonly />


    <van-field name="locationName" value="{{ locationName }}" type="textarea" autosize center clearable label="位置" placeholder="点击获取位置" bindtap="chooseLocation" is-link readonly >
    </van-field>

    <van-field name="locationInfo" value="{{ locationInfo }}" label="详细地址" type="textarea" autosize placeholder="请输入详细地址（可选）" autosize border="{{ false }}" />

    <van-field name="orgInfo" value="{{ orgInfo }}" label="组织简介" type="textarea" placeholder="请输入组织简介" autosize border="{{ false }}" />
  </van-cell-group>


<view class="field-index--van-field van-cell van-cell--center" style="padding-top: 8px;">
<van-row gutter="10">
  <van-col span="15" ><view class="van-cell__title" style="margin-top: 10%;">组织LOGO</view></van-col>
  <van-col span="2">
  <van-uploader name="logo" preview-size="50px" upload-text="" file-list="{{ logoFileList }}" bind:before-read="beforeRead" bind:after-read="afterRead" bind:delete="delete" bind:click-preview="clickPreview" use-before-read="{{ true }}" multiple="{{ false }}" image-fit="aspectFit" max-count="1" sizeType="compressed"/>
  </van-col>
</van-row>
</view>


  <van-cell-group title="联系人信息">
    <van-field name="contactName" value="{{ contactName }}" clearable label="联系人"  placeholder="请输入联系人的名字" bind:click-icon="onClickIcon" />
    <van-field name="contactTel" value="{{ contactTel }}" clearable label="手机号"  placeholder="请输入联系人的手机" bind:click-icon="onClickIcon" />
  </van-cell-group>
  <van-cell-group title="详细资料">
    <van-field name="QQGroup" value="{{ QQGroup }}" clearable label="QQ群"  placeholder="请输入QQ群号" bind:click-icon="onClickIcon" />
    <van-field name="wxmp" value="{{ wxmp }}" clearable label="微信公众号"  placeholder="微信公众号的名字(可选)" bind:click-icon="onClickIcon" />

    <van-field name="reason" value="{{ reason }}" label="申请说明" type="textarea" autosize placeholder="请输入申请说明" autosize border="{{ false }}" />
  </van-cell-group>
  <van-cell-group title="证明材料（如社会团体证、微信或QQ管理员后台截图）" >
  <view style="padding-top: 8px;padding-left: 8px;">  
    <van-uploader name="file" file-list="{{ postFileList }}" bind:before-read="beforeRead" bind:after-read="afterRead" bind:delete="delete" bind:click-preview="clickPreview" use-before-read="{{ true }}" multiple="{{ false }}" image-fit="aspectFit" sizeType="compressed"/>
    </view>
    </van-cell-group>
  <button type="primary" bindtap="postBt" form-type="submit" color="linear-gradient(to right, #4bb0ff, #6149f6)" loading='{{loading}}' block>提交资料</button>
</form>
</block>