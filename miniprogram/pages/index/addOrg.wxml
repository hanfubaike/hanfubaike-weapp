<van-popup position="bottom" show="{{ popupshow }}" bind:close="onClose">
  <van-picker columns="{{ columns }}" default-index="{{ 1 }}" bind:change="pickeOnChange" />111
</van-popup>
<van-notify id="van-notify" />
<van-action-sheet show="{{ show }}" actions="{{ actions }}" bind:close="onClose" bind:select="onSelect" close-on-click-overlay="{{false}}" />

<form bindsubmit="formSubmit" bindreset="formReset">
  <van-cell-group title="基本资料">
    <van-field name="orgName" value="{{ orgName }}" clearable label="组织名称" icon="question-o" placeholder="请输入组织名称" bind:click-icon="onClickIcon" />
    <van-field name="orgClass" value="{{ orgClass }}" clearable label="组织类型" placeholder="选择组织类型" bindtap="orgClick" is-link readonly />


    <van-field name="locationName" value="{{ locationName }}" center clearable label="地址" placeholder="请点击按钮获取地址" use-button-slot>
      <van-button bind:click="chooseLocation" slot="button" size="small" type="primary">获取</van-button>
    </van-field>

    <van-field name="orgInfo" value="{{ orgInfo }}" label="组织简介" type="textarea" placeholder="请输入组织简介" autosize border="{{ false }}" />
  </van-cell-group>


<view class="field-index--van-field van-cell van-cell--center" style="padding-top: 8px;">
<van-row gutter="10">
  <van-col span="15" ><view class="van-cell__title" style="margin-top: 10%;">组织LOGO</view></van-col>
  <van-col span="2">
  <van-uploader name="logo" preview-size="50px" upload-text="" file-list="{{ logoFileList }}" bind:before-read="beforeRead" bind:after-read="afterRead" bind:delete="delete" bind:click-preview="clickPreview" use-before-read="{{ false }}" multiple="{{ false }}" image-fit="aspectFit" max-count="1"/>
  </van-col>
</van-row>
</view>


  <van-cell-group title="负责人信息">
    <van-field name="adminName" value="{{ adminName }}" clearable label="负责人" icon="question-o" placeholder="请输入负责人的名字" bind:click-icon="onClickIcon" />
    <van-field name="adminNum" value="{{ adminNum }}" clearable label="手机号" icon="question-o" placeholder="请输入负责人的手机" bind:click-icon="onClickIcon" />
  </van-cell-group>
  <van-cell-group title="详细资料">
    <van-field name="QQGroup" value="{{ QQGroup }}" clearable label="QQ群" icon="question-o" placeholder="请输入QQ群号" bind:click-icon="onClickIcon" />
    <van-field name="wxmp" value="{{ wxmp }}" clearable label="微信公众号" icon="question-o" placeholder="微信公众号的名字(可选)" bind:click-icon="onClickIcon" />

    <van-field name="applyInfo" value="{{ applyInfo }}" label="申请说明" type="textarea" placeholder="请输入申请说明" autosize border="{{ false }}" />
  </van-cell-group>
  <van-cell-group title="证明材料（如社会团体证、微信或QQ管理员后台截图）" >
  <view style="padding-top: 8px;padding-left: 8px;">  
    <van-uploader name="file" file-list="{{ fileList }}" bind:before-read="beforeRead" bind:after-read="afterRead" bind:delete="delete" bind:click-preview="clickPreview" use-before-read="{{ false }}" multiple="{{ false }}" image-fit="aspectFit"/>
    </view>
    </van-cell-group>
  <button type="primary" form-type="submit">提交资料</button>
</form>