/* pages/index/map.wxss */
@import '/style/weui.wxss';
@import "../../wxSearchView/wxSearchView.wxss";

.image {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:5px 5px 5px 5px;

}

.cover-image{
  width:75px;
  height:75px;
  background-color:#eeeeee;

}

.cover-view{
  width:auto;

}

.title {
  padding:3px 0 0 0;
  padding-left: 20rpx;
  font-size: 15px;
  font-weight: bold;
  color: #104E8B;
}

.map_container {
  margin-top:40px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.bText {
  margin: 0 0 0 0;
  display: inline;
  color: #000;
}

.map_text {
  left: 0;
  right: 0;
  position:absolute;
  bottom:0px;
  height: 80px;
  background: rgba(255,255,255,0.9);
  padding: 5px 5px 5px 5px;
}

.tText {
  margin: 3px 0;
  display: block;
  font-size: 12px;
  padding: 5px 0 0 0;
  font-weight:100;
  padding-left: 20rpx;
}

.h1 {
  margin: 30px 0 15px 0;
  font-size: 15px;
  font-weight: bold;
}


page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
